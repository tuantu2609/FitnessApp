<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quest_background"
    tools:context=".ui.MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quest: Step Tracker"
        android:textSize="28sp"
        android:textColor="#FFD700"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:shadowColor="#FF8C00"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"/>

    <ImageView
        android:id="@+id/badgeImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_badge"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/stepsText"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:contentDescription="Milestone Badge"/>

    <!-- Step count -->
    <TextView
        android:id="@+id/stepsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 steps"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/quoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motivational Quote"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="#FF5722"
        android:layout_below="@id/stepsText"
        android:layout_centerHorizontal="true"
        />

    <!-- Calories burned -->
    <TextView
        android:id="@+id/caloriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: 0"
        android:textSize="18sp"
        android:textColor="#FF4500"
        android:layout_below="@id/quoteText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"/>

    <!-- Points earned -->
    <TextView
        android:id="@+id/pointsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: 0"
        android:textSize="18sp"
        android:textColor="#00FF7F"
        android:layout_below="@id/caloriesText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"/>

    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:backgroundTint="#32CD32"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="48dp"
        android:layout_alignParentStart="true"/>

    <!-- Pause Button -->
    <Button
        android:id="@+id/pauseButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4500"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="48dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
